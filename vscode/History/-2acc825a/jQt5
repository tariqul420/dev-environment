# ---- Build Stage ----
FROM node:20-slim AS builder
WORKDIR /app

# If you use npm. (For yarn/pnpm adapt accordingly)
COPY package*.json ./
RUN npm ci

# Copy source & build
COPY . .
ENV NEXT_TELEMETRY_DISABLED=1
RUN npm run build

# ---- Runtime Stage ----
FROM node:20-slim
WORKDIR /app

# Base env (override PORT in compose/env if needed)
ENV NODE_ENV=production \
    NEXT_TELEMETRY_DISABLED=1 \
    HOSTNAME=0.0.0.0 \
    PORT=3000

# Create non-root user
RUN useradd -m -u 10001 nextjs

# Copy standalone output with proper ownership
COPY --from=builder --chown=nextjs:nextjs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nextjs /app/.next/static ./.next/static
COPY --from=builder --chown=nextjs:nextjs /app/public ./public

# Ensure Next.js cache is writable
RUN mkdir -p /app/.next/cache && chown -R nextjs:nextjs /app

USER nextjs
EXPOSE 3000
CMD ["node", "server.js"]
