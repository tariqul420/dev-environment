{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",

  // VCS integration
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  // File handling
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!.vercel",
      "!.turbo"
    ]
  },

  // Formatter (Prettier replacement)
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100, // like Prettier printWidth
    "attributePosition": "auto" // keeps JSX props readable
  },

  // Linter rules
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off" // allow Tailwind @apply, @layer, etc.
      },
      "style": {
        "useImportType": "error", // enforce import type for TS
        "useTemplate": "error" // prefer template literals
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended",
      "typescript": "recommended"
    }
  },

  // Auto-fixes / actions
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on", // auto sort + group imports
        "fixAll": "on" // run all safe fixes
      }
    }
  }
}
