{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "ignoreUnknown": true,
    // Prefer explicit ignores instead of include-negation
    "ignore": [
      "node_modules/**",
      ".next/**",
      "dist/**",
      "build/**",
      ".vercel/**",
      ".turbo/**",
      "prisma/generated/**"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "attributePosition": "auto"
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"     // allow Tailwind @apply, @layer, etc.
      },
      "style": {
        "useImportType": "error",     // TS: import type
        "useTemplate": "error"        // prefer template literals
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended",
      "tailwind": "recommended"       // optional: Tailwind-aware rules
    }
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"       // allowed
        // "fixAll": "on"             // ‚ùå not allowed by schema
      }
    }
  }
}
