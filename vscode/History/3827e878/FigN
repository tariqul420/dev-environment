# Development stage
FROM node:22-alpine

WORKDIR /app

COPY package*.json ./

RUN npm ci

COPY . .

EXPOSE 3000

CMD [ "npm", "run", "dev"]

# Builder Stage
FROM node:22-alpine as Builder

WORKDIR /app

COPY package*.json ./

RUN npm run Builder

# Production stage
FROM node:18-alpine AS production

WORKDIR /app

COPY --from=Builder /app ./

EXPOSE 3001

CMD ["npm", "start"]